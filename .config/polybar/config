;ramp-capacity-0-foreground = ${colors.cyan1}
;ramp-capacity-1-foreground = ${colors.red0}
;ramp-capacity-2-foreground = ${colors.red1}
;ramp-capacity-3-foreground = ${colors.green0}
;ramp-capacity-4-foreground = ${colors.green0}

[module/date]
