[bar/tray]
locale =		de_DE.UTF-8
bottom =		false
fixed-center =		true
width =			100%
height =		31
;background =		#22000000
background =		#11ffffff
foreground =		${colors.foreground}
border-size =		8
border-top-size =	6
border-bottom-size =	6
border-color =		${self.background}
underline-size =	0
font-0 =		Fira Sans:pixelsize=14;antialias=true;3
font-1 =		Source Han Sans KR:pixelsize=14;3
font-2 =		Material Icons:pixelsize=15;5
