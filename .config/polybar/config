[colors]
background =		${xrdb:background}
foreground =		${xrdb:foreground}
black0 =		${xrdb:color0}
black1 =		${xrdb:color8}
red0 =			${xrdb:color1}
red1 =			${xrdb:color9}
green0 =		${xrdb:color2}
green1 =		${xrdb:color10}
yellow0 =		${xrdb:color3}
yellow1 =		${xrdb:color11}
blue0 =			${xrdb:color4}
blue1 =			${xrdb:color12}
magenta0 =		${xrdb:color5}
magenta1 =		${xrdb:color13}
cyan0 =			${xrdb:color6}
cyan1 =			${xrdb:color14}
white0 =		${xrdb:color7}
white1 =		${xrdb:color15}

[bar/tray]
locale =		de_DE.UTF-8
bottom =		false
width =			100%
height =		31
background =		#11ffffff
foreground =		${colors.foreground}
border-size =		8
border-top-size =	6
border-bottom-size =	6
border-color =		${self.background}
font-0 =		Fira Sans:pixelsize=14;antialias=true;3
font-1 =		Source Han Sans KR:pixelsize=14;3
font-2 =		Material Icons:pixelsize=15;5
font-3 =                Wuncon Siji;3
module-margin =		2
modules-left =		i3 player-prev player-next spotify
modules-right =		netusage pubip wireguard openvpn wlan bluetooth volume xbacklight system-usb-udev battery date

[global/wm]
margin-top = 0
margin-bottom = 0

[settings]
screenchange-reload = false


;------
; tray
;------

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
ws-icon-0 = 1;"    "
ws-icon-1 = 2;"    "
ws-icon-2 = 3;"    "
ws-icon-3 = 4;"    "
ws-icon-4 = 5;"    "
ws-icon-5 = 6;"    "
ws-icon-default = "    "

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.green1}
; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-foreground = ${colors.green1}
; visible = Active workspace on unfocused monitor
label-visible = %icon%
; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.red0}
; mode = Status, like resize
label-mode = "  resize  "
label-mode-background = ${colors.blue0}
label-mode-foreground = ${colors.background}

scroll-up =		i3wm-wsnext
scroll-down =		i3wm-wsprev

[module/xwindow]
type = internal/xwindow
format = <label>
format-prefix = ""
label = " %title:0:70:..%"
label-empty =

[module/system-usb-udev]
type = custom/script
exec = ~/.config/polybar/scripts/system-usb-udev.sh
tail = true
click-left = ~/.config/polybar/scripts/system-usb-udev.sh --mount
click-right = ~/.config/polybar/scripts/system-usb-udev.sh --unmount

[module/player-prev]
type = custom/script
format-foreground = ${colors.green1}
exec = if [[ $(pgrep spotify)  > 0 ]] ; then echo ; else echo ''; fi
interval = 1
click-left = exec playerctl previous

[module/player-next]
type = custom/script
format-foreground = ${colors.green1}
exec = if [[ $(pgrep spotify)  > 0 ]] ; then echo ; else echo ''; fi
interval = 1
click-left = exec playerctl next

[module/spotify]
type = custom/script
format-foreground = ${colors.green1}
exec = if [[ "$(playerctl status)" = "Connection to player failed: No players found" ]]; then echo -n ""; elif [[ "$(playerctl status)" = "Playing" ]]; then echo -n " "; playerctl metadata xesam:artist; echo -n " – "; playerctl metadata xesam:title; else echo -n " "; playerctl metadata xesam:artist; echo -n " – "; playerctl metadata xesam:title; fi
exec-if = [[ "$(playerctl status)" = "Playing" || "$(playerctl status)" = "Paused" ]] && echo "0"
interval = 1
click-left = playerctl play-pause

[module/netusage]
type = internal/network
interface = wlp2s0
tail = true
format-connected = <label-connected>
label-connected = "%upspeed:8%  %downspeed:8%"
label-disconnected= 

[module/pubip]
type = custom/script
exec-if = ip a s wlp2s0 | grep global
exec = ~/.config/polybar/scripts/pub-ip.sh
interval = 30
format-prefix = ""
label = " %output%"

[module/wireguard]
type = custom/script
exec = ls -a ~ | grep .wrgrd
interval = 5
format-prefix = ""
label = " WireGuard"

[module/openvpn]
type = custom/script
exec = pgrep openvpn
interval = 5
format-prefix = ""
label = " OpenVPN"

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 5

;format-connected = <ramp-signal><label-connected>
format-connected = <ramp-signal>
label-connected = " %essid%"

format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colors.red0}
label-disconnected = ""

ramp-signal-0 = ""

[module/bluetooth]
type = custom/script
exec = ~/.config/polybar/scripts/bluetooth.sh
interval = tail
format = ""

click-left = exec bluetoothctl connect 08\:DF\:1F\:B7\:33\:18
click-right = exec bluetoothctl disconnect 08\:DF\:1F\:B7\:33\:18

[module/xbacklight]
type = internal/xbacklight
format = <label>
format-prefix = ""
label = " %percentage%"

enable-scroll = true
scroll-up =		exec xbacklight -inc 1
scroll-down =		exec xbacklight -dec 1

[module/volume]
type = internal/alsa
format-volume = <ramp-volume><label-volume>
label-volume = " %percentage%"
label-muted = ""

ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""
ramp-volume-3 = ""
ramp-volume-4 = ""
ramp-volume-5 = ""
ramp-volume-6 = ""
ramp-volume-7 = ""

scroll-up =		exec amixer sset 'Master' 1%+
scroll-down =		exec amixer sset 'Master' 1%-

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99

format-full-prefix = ""

format-charging = <animation-charging><label-charging>
label-charging = "%percentage%"

format-discharging = <ramp-capacity><label-discharging>
label-discharging = "%percentage%"

animation-charging-0 = ""
animation-charging-1 = ""
animation-charging-framerate = 750

ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-4 = ""

[module/date]
type = custom/script
exec = date +'%-d. %B, %H:%M Uhr'
label = " %output%"

format-prefix = ""
interval = 60


;--------
; unused
;--------

[module/eth]
type = internal/network
interface = enp4s0f1
interval = 3.0

format-connected-prefix = ""
label-connected = " %local_ip%"

format-disconnected = <label-disconnected>
label-disconnected =  %ifname%
