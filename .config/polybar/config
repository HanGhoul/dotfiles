ramp-volume-1 = " "
ramp-volume-2 = " "
ramp-volume-3 = " "
ramp-volume-4 = " "
ramp-volume-5 = " "
ramp-volume-6 = " "
ramp-volume-7 = " "
ramp-volume-foreground = ${colors.status-ico}
ramp-volume-background = ${colors.status-bg5}

scroll-up =		exec amixer sset 'Master' 1%+
scroll-down =		exec amixer sset 'Master' 1%-

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99

