[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
ws-icon-0 = 1;ÓÖæ
ws-icon-1 = 2;ÓÖø
ws-icon-2 = 3;ÓÜÄ
ws-icon-3 = 4;ÓÜÅ
