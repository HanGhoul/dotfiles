[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
ws-icon-0 = 1;"    "
ws-icon-1 = 2;"    "
ws-icon-2 = 3;"    "
ws-icon-3 = 4;"    "
ws-icon-4 = 5;"    "
ws-icon-5 = 6;"    "
ws-icon-default = "    "

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-foreground = ${colors.status-ico}
label-focused-background = ${colors.green1}

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-background = 
label-unfocused-foreground = ${colors.green1}
label-unfocused-underline = ${self.label-focused-background}
; visible = Active workspace on unfocused monitor
label-visible = %icon%
; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.red0}
label-urgent-foreground = ${colors.status-ico}
; mode = Status, like resize
label-mode = "  resize  "
label-mode-background = ${colors.blue0}
label-mode-foreground = ${colors.background}

scroll-up =		i3wm-wsnext
scroll-down =		i3wm-wsprev

[module/xwindow]
type = internal/xwindow
format = <label>
label = "%title:0:70:..%  "
label-empty =
label-background = ${self.format-prefix-background}
label-foreground = ${colors.status-ico}

format-prefix = "   "
format-prefix-background = ${colors.status-bg6}
format-prefix-foreground = ${colors.status-ico}
format-underline = ${self.format-prefix-background}

[module/system-usb-udev]
type = custom/script
exec = ~/.config/polybar/scripts/system-usb-udev.sh
tail = true
click-left = ~/.config/polybar/scripts/system-usb-udev.sh --mount
click-right = ~/.config/polybar/scripts/system-usb-udev.sh --unmount
format-foreground = ${colors.status-ico}
format-background = ${colors.status-bg1}

[module/powermenu]
type = custom/menu

expand-right = false

format-background = ${colors.red0}

; shutdown icon
label-open = ""
label-open-foreground = ${colors.black0}
; arrow icon
label-close = "   "
label-close-foreground = ${colors.black0}

label-separator =

; logout
menu-0-0 = "  "
menu-0-0-foreground = ${colors.black0}
menu-0-0-exec = i3-msg exit
; reboot
menu-0-1 = "  "
menu-0-1-foreground = ${colors.black0}
menu-0-1-exec = systemctl reboot
; shutdown
menu-0-2 = "  "
menu-0-2-foreground = ${colors.black0}
menu-0-2-exec = systemctl poweroff

[module/player-prev]
type = custom/text
content = 
click-left = exec playerctl previous

[module/player-next]
type = custom/text
content = 
click-left = exec playerctl next

[module/spotify]
type = custom/script
exec = if [[ "$(playerctl status)" = "Connection to player failed: No players found" ]]; then echo -n ""; elif [[ "$(playerctl status)" = "Playing" ]]; then echo -n "  "; playerctl metadata xesam:artist; echo -n " – "; playerctl metadata xesam:title; else echo -n "  "; playerctl metadata xesam:artist; echo -n " – "; playerctl metadata xesam:title; fi
exec-if = [[ "$(playerctl status)" = "Playing" || "$(playerctl status)" = "Paused" ]] && echo "0"
interval = 1
click-left = playerctl play-pause

[module/netusage]
type = internal/network
interface = wlp2s0
tail = true
label-disconnected= 
label-connected = " %upspeed:8%  %downspeed:8% "
label-connected-background = ${colors.status-bg2}
label-connected-foreground = ${colors.status-ico}
format-connected = <label-connected>

[module/pub-ip]
type = custom/script
exec-if = ip a s wlp2s0 | grep global
exec = ~/.config/polybar/scripts/pub-ip.sh
interval = 30
label = " %output% "
label-background = ${self.format-prefix-background}
label-foreground = ${colors.status-ico}
format-prefix = " "
format-prefix-background = ${colors.status-bg3}
format-prefix-foreground = ${colors.status-ico}
format-underline = ${self.format-prefix-background}

[module/wireguard]
type = custom/script
exec = ls -a ~ | grep .wrgrd
interval = 5
label = " WireGuard "
label-background = ${self.format-prefix-background}
label-foreground = ${colors.status-ico}
format-prefix = " "
format-prefix-background = ${colors.status-bg3}
format-prefix-foreground = ${colors.status-ico}
format-underline = ${self.format-prefix-background}

[module/openvpn]
type = custom/script
exec = pgrep openvpn
interval = 5
label = " OpenVPN "
label-background = ${self.format-prefix-background}
label-foreground = ${colors.status-ico}
format-prefix = " "
format-prefix-background = ${colors.status-bg3}
format-prefix-foreground = ${colors.status-ico}
format-underline = ${self.format-prefix-background}

[module/wlan]
type = internal/network
interface = wlp2s0
