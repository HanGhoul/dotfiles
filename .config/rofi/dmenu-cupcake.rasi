* {
	background-color:	#585062;
	color:			#fbf1f2;
	height:			42px;
}

#window {
	anchor:		north;
	location:	north;
	width:		100%;
	children:	[ horibox ];
}

#horibox {
	orientation:	horizontal;
	children:	[ prompt, entry, listview];
}

#prompt {
	background-color:	#8b8198;
	padding:		12px;
}

#entry {
	expand:		false;
	padding:	11px;
	width:		8em;
}

#listview {
	layout:		horizontal;
}

#element {
	padding:	10px 12px;
	color:		#8b8198;
}

#element selected {
	background-color:	#8b8198;
	color:			#fbf1f2;
}
