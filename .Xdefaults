! Fonts

Xft.dpi:			96
Xft.hinting:			true
Xft.hintstyle:			hintsfull
Xft.autohint:			true
Xft.antialias:			true
Xft.lcdfilter:			lcddefault
Xft.rgba:			rgb

! URxvt

URxvt.imLocale:			de_DE.UTF-8
URxvt.saveLines:		9999
URxvt.scrollBar:		false
URxvt.secondaryScroll:		true
URxvt.perl-lib:			/usr/lib/URxvt/perl/
URxvt.perl-ext-common:		default,matcher
URxvt.visualBell:		true
URxvt.cursorBlink:		true
URxvt.buffered:			true
URxvt.externalBorder:		4
URxvt.internalBorder:		0
URxvt.font:			xft:Fira Code:pixelsize=17:antialias=true
;URxvt.font:			xft:Monaco:pixelsize=16:antialias=true
;URxvt.font:			xft:Misc Tamzen:pixelsize=20:antialias=false
;URxvt.font:			xft:Misc Tamsyn:pixelsize=17:antialias=false
URxvt.depth:			32
URxvt.fading:			33
URxvt.fadeColor			#000000

! URxvt perl ext

URxvt.matcher.button:		1
URxvt.urlLauncher:		firefox
